# Dockerfile.api for JobTrak API Service with Redis support
FROM python:3.10-slim

WORKDIR /app

# Install system dependencies (including Playwright requirements)
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    unzip \
    wget \
    redis-tools \
    # Playwright dependencies
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libatspi2.0-0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install Playwright browsers (automated)
RUN playwright install chromium
RUN playwright install-deps chromium

# Copy source code
COPY . .

# Create necessary directories
RUN mkdir -p /app/database /app/output /app/logs

# Default environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    PLAYWRIGHT_BROWSERS_PATH=/ms-playwright \
    REDIS_URL=redis://redis:6379/0 \
    REDIS_HOST=redis \
    REDIS_PORT=6379 \
    REDIS_DB=0 \
    CACHE_TTL=3600

# Health check script for Redis connectivity
COPY --chmod=755 <<'EOF' /usr/local/bin/healthcheck.sh
#!/bin/bash
# Check if Redis is accessible
redis-cli -h ${REDIS_HOST:-redis} -p ${REDIS_PORT:-6379} ping > /dev/null 2>&1
if [ $? -eq 0 ]; then
    echo "Redis connection: OK"
else
    echo "Redis connection: FAILED"
    exit 1
fi

# Check if FastAPI is running
curl -f http://localhost:8000/health > /dev/null 2>&1
if [ $? -eq 0 ]; then
    echo "FastAPI health: OK"
    exit 0
else
    echo "FastAPI health: FAILED"
    exit 1
fi
EOF

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD /usr/local/bin/healthcheck.sh

# Expose the port
EXPOSE 8000 5678

CMD ["python", "-m", "main"]